@import '/library/bootstrap.css/css/bootstrap.css'
@import '/library/bootstrap.css/css/bootstrap-responsive.css'
@import '../vendor'

body
  background-image url('../images/layout/bg.jpg')
  background-repeat repeat

input, textarea, select, *
	font-family 'Raleway', sans-serif



/* Navbar */

#container-head
	width 100%
	min-height 40px
	position fixed
	top 0
	left 0
	background #3c3c3c
	background -moz-linear-gradient(top,  #3c3c3c 0%, #292929 100%)
	background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#3c3c3c), color-stop(100%,#292929))
	background -webkit-linear-gradient(top,  #3c3c3c 0%,#292929 100%)
	background -o-linear-gradient(top,  #3c3c3c 0%,#292929 100%)
	background -ms-linear-gradient(top,  #3c3c3c 0%,#292929 100%)
	background linear-gradient(to bottom,  #3c3c3c 0%,#292929 100%)
	shadow  0px 1px 4px 0px rgba(0, 0, 0, 0.2)

#container-head .span12
	padding 0 10px 0 10px

.navbar .btn-navbar
	padding 0 15px 0 15px
	height 32px
	background inherit
	margin 3px 0 0 0
	background-color #222
	font-size 23px
	line-height 30px

.navbar .btn-navbar:hover, .navbar .btn-navbar:active, .navbar .btn-navbar.active, .navbar .btn-navbar.disabled, .navbar .btn-navbar[disabled]
	background-color #111

#logo
	display block
	background-image url('../images/layout/logo.png')
	width 282px
	height 109px
	margin auto
	margin-top 10px
	margin-bottom 20px

.logo-txt
	font-family 'Lobster', cursive
	font-size 25px
	line-height 36px
	color #fff
	text-decoration none
	display block
	float left
	margin-right 10px
	&:hover
		color #fff
		text-decoration none

.navbar .nav > li > a:focus, .navbar .nav > li > a:hover
	color #fff

.navbar .nav li.dropdown.open > .dropdown-toggle, .navbar .nav li.dropdown.active > .dropdown-toggle, .navbar .nav li.dropdown.open.active > .dropdown-toggle
	color #fff
	background-color transparent

.navbar .nav > li > a
	font-family 'Raleway', sans-serif
	noshadow()
	padding 0
	color #999
	font-size 14px
	line-height 40px
	display block
	padding 0 10px 0 10px
	&:hover
		color #fff
		text-decoration none

.dropdown-menu a
	font-family 'Raleway', sans-serif

.dropdown-menu li > a:hover, .dropdown-menu li > a:focus, .dropdown-submenu:hover > a
	background-image inherit
	background-color #69a4d2
	
@media (max-width: 979px)
	.nav-collapse .nav > li > a:hover, .nav-collapse .dropdown-menu a:hover
		background-color #222




/* Body */
.container-fluid
	max-width 1400px
	margin auto

.body
	background-color #fff
	padding 10px
	margin 0 0 20px 0
	shadow  0px 1px 4px 0px rgba(0, 0, 0, 0.2)
	round 5px














#nav-container
	text-align center
	background-color #fff
	padding 10px
	margin 0px 0px 20px 0px
	shadow  0px 1px 4px 0px rgba(0, 0, 0, 0.2)
	round 30px

@media screen and (max-width: 550px)
	#nav-container a img
		width 13%
		margin 0px 2% 0px 2%
	#nav-container
		round 20px

@media screen and (min-width: 550px)
	#nav-container a
		margin 0px 10px 0px 10px

#nav-container a:hover
	text-decoration none

fadeTo("#nav-container a", .25s, .5, 1)